/* 천천히 떨리는 텍스트 */
@keyframes shakeSlow {
  0% { transform: translateX(0); }
  25% { transform: translateX(-1px); }
  50% { transform: translateX(1px); }
  75% { transform: translateX(-1px); }
  100% { transform: translateX(0); }
}

.shake-slow {
  display: inline-block;
  animation: shakeSlow 0.6s infinite ease-in-out;
}

/* 사라졌다 나타나는 텍스트 */
@keyframes fadeInOut {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

.fade-in-out {
  animation: fadeInOut 2s infinite;
}

/* 천천히 부드럽게 슬라이드하는 텍스트 */
@keyframes slideInSlow {
  0% {
    opacity: 0;
    transform: translateX(-80px); /* 더 멀리서 시작 */
  }
  60% {
    opacity: 1;
    transform: translateX(-10px); /* 거의 다 와서 잠깐 멈칫 */
  }
  100% {
    opacity: 1;
    transform: translateX(0);
  }
}

.slide-in-slow {
  display: inline-block;
  animation: slideInSlow 3s cubic-bezier(0.25, 1, 0.5, 1) forwards;
  /* ↑ 천천히-빠르게-부드럽게 끝나는 자연스러운 곡선 */
}



/* 부들부들 떠는 텍스트 */
@keyframes shakeHard {
  0% { transform: translate(0, 0); }
  20% { transform: translate(-2px, 1px); }
  40% { transform: translate(2px, -1px); }
  60% { transform: translate(-1px, 2px); }
  80% { transform: translate(1px, -2px); }
  100% { transform: translate(0, 0); }
}

.shake-hard {
  display: inline-block;
  animation: shakeHard 0.15s infinite;
}

/* 맥박처럼 뛰는 텍스트 */
