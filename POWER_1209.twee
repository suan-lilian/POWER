Macro.add('appendBlock', {
    tags: null,
    handler() {
        if (this.args.length < 2) {
            return this.error('Usage: <<appendBlock "targetId" "label">> ... <</appendBlock>>');
        }

        const targetId = this.args[0];
        const label = this.args[1];
        const content = this.payload[0] ? this.payload[0].contents : '';

        const link = document.createElement('span');
        link.className = 'link-text';
        link.textContent = label;
        link.style.cursor = 'pointer';

        // ⬇⬇⬇ 여기서 handleClick을 안전하게 const로 정의
        const handleClick = function () {
            const target = document.getElementById(targetId);
            if (target) {
                new Wikifier(target, content);
            }

            // 클릭 후 스타일 변경
            this.style.color = '#888';

            // 비활성화 처리
            this.style.pointerEvents = 'none'; 
            this.style.cursor = 'default';

            link.removeEventListener('click', handleClick);
        };

        // 안전하게 리스너 등록
        link.addEventListener('click', handleClick);

        this.output.appendChild(link);
    }
});

